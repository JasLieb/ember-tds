<h3 class="h3 mt-3">Ajouter un contact</h3> <hr/>
<form >
  <div class="form-group">
    <label for="nom">Nom : </label>
    {{input value=model.nom id="nom" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="prenom">Prenom : </label>
    {{input value=model.prenom id="prenom" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="email">Email : </label>
    {{input value=model.email id="email" class="form-control"}}
  </div>
</form>

<button class="btn btn-success" {{action "addNew" model}}>{{fa-icon "check"}} Valider</button>
{{outlet}}