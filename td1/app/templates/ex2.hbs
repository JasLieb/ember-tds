  <h2>{{plural model.countActive "Aucun service selectionne" "service selectionne" "services selectionnes"}}</h2>

  {{#each model.service as |serv|}}
    <button {{action "toggleActive" serv}} class="btn btn-{{if serv.active 'success' 'info'}}" style="height: 100%; width: 100%;">
      <p class="text-center">{{serv.name}} prix : {{serv.price}}</p>
